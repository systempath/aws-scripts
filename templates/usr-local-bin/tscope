#!/bin/bash

# Colors
CYAN='\033[0;36m'
BRIGHT_CYAN='\033[1;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
DIM='\033[2m'
NC='\033[0m'

clear
echo -e "${BRIGHT_CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${BRIGHT_CYAN}â•‘               SYSTEM PATHâ„¢ Laravel Telescope                 â•‘${NC}"
echo -e "${BRIGHT_CYAN}â•‘                   ğŸ“¡ Debugging Dashboard                     â•‘${NC}"
echo -e "${BRIGHT_CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""

SERVER_IP=$(curl -s ifconfig.me 2>/dev/null || curl -s ipinfo.io/ip 2>/dev/null || echo "your-server-ip")

echo -e "${GREEN}ğŸ“¡ Telescope Dashboard:${NC}"
echo -e "  ${BLUE}http://${SERVER_IP}/telescope${NC}"
echo ""

echo -e "${GREEN}Status:${NC}"
if [ -f /var/www/html/.env ]; then
    if grep -q "TELESCOPE_ENABLED=true" /var/www/html/.env 2>/dev/null; then
        echo -e "  ${GREEN}â— Enabled${NC} âœ“"
    else
        echo -e "  ${RED}â— Disabled${NC} âœ—"
    fi
else
    echo -e "  ${YELLOW}â— Laravel not configured yet${NC}"
fi
echo ""

echo -e "${GREEN}Commands:${NC}"
echo -e "  ${CYAN}php artisan telescope:clear${NC}     Clear all entries"
echo -e "  ${CYAN}php artisan telescope:prune${NC}     Prune old entries (>48hrs)"
echo -e "  ${CYAN}php artisan telescope:pause${NC}     Pause recording"
echo -e "  ${CYAN}php artisan telescope:resume${NC}    Resume recording"
echo -e "  ${CYAN}php artisan telescope:publish${NC}   Republish assets"
echo ""

echo -e "${GREEN}Watchers Configured:${NC}"
if [ -f /var/www/html/.env ]; then
    echo -e "  ${YELLOW}Monitoring:${NC} Requests, Queries, Jobs, Exceptions, Logs, Mail"
    echo -e "  ${YELLOW}Performance:${NC} Slow queries, N+1 problems, Memory usage"
    echo -e "  ${YELLOW}Queue:${NC} Job processing, Failed jobs, Job batches"
else
    echo -e "  ${YELLOW}Run 'setup-laravel' to configure Telescope${NC}"
fi
echo ""

echo -e "${DIM}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo -e "${CYAN}  Telescope provides insight into your application's internals${NC}"
echo -e "${DIM}â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
