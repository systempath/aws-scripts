#!/bin/bash

# Colors
CYAN='\033[0;36m'
BRIGHT_CYAN='\033[1;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

clear
echo -e "${BRIGHT_CYAN}╔═══════════════════════════════════════════════════════════════╗${NC}"
echo -e "${BRIGHT_CYAN}║               SYSTEM PATH™ GitHub Deploy Key                 ║${NC}"
echo -e "${BRIGHT_CYAN}╚═══════════════════════════════════════════════════════════════╝${NC}"
echo ""

if [ -f /home/ubuntu/.ssh/github_deploy_key.pub ]; then
    echo -e "${GREEN}📋 Copy this public key to add as a GitHub deploy key:${NC}"
    echo ""
    echo -e "${YELLOW}"
    cat /home/ubuntu/.ssh/github_deploy_key.pub
    echo -e "${NC}"
    echo ""
    echo -e "${CYAN}To add to GitHub:${NC}"
    echo "  1. Go to your repository → Settings → Deploy keys"
    echo "  2. Click 'Add deploy key'"
    echo "  3. Paste the above key"
    echo "  4. Give it a title like: $(hostname)-deploy"
    echo "  5. Check 'Allow write access' if needed for deployments"
    echo ""
    echo -e "${GREEN}To test connection:${NC} ssh -T git@github.com"
    echo ""
    echo -e "${GREEN}To clone a repository:${NC}"
    echo "  Private: git clone git@github.com:username/repo.git"
    echo "  Public:  git clone https://github.com/username/repo.git"
    echo ""

    # Check if git identity is configured
    GIT_USER_NAME=$(git config --global user.name 2>/dev/null || echo "")
    GIT_USER_EMAIL=$(git config --global user.email 2>/dev/null || echo "")

    if [ -z "$GIT_USER_NAME" ] || [ -z "$GIT_USER_EMAIL" ]; then
        echo -e "${YELLOW}───────────────────────────────────────────────────────────────${NC}"
        echo -e "${YELLOW}⚠  Git identity not configured${NC}"
        echo ""
        echo "Git identity (name/email) is required for making commits."
        echo "It's optional if you're only deploying code."
        echo ""
        read -p "Configure git identity now? (y/N): " -n 1 -r
        echo ""
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            echo ""
            read -p "Enter your name: " git_name
            read -p "Enter your email: " git_email

            if [ -n "$git_name" ] && [ -n "$git_email" ]; then
                git config --global user.name "$git_name"
                git config --global user.email "$git_email"
                echo ""
                echo -e "${GREEN}✓ Git identity configured:${NC}"
                echo "  Name:  $git_name"
                echo "  Email: $git_email"
            else
                echo -e "${YELLOW}Skipped - incomplete information${NC}"
            fi
        else
            echo "Skipped. You can configure later with:"
            echo "  git config --global user.name \"Your Name\""
            echo "  git config --global user.email \"your@email.com\""
        fi
    else
        echo -e "${YELLOW}───────────────────────────────────────────────────────────────${NC}"
        echo -e "${GREEN}✓ Git identity configured:${NC}"
        echo "  Name:  $GIT_USER_NAME"
        echo "  Email: $GIT_USER_EMAIL"
    fi
else
    echo -e "${RED}❌ No GitHub deploy key found!${NC}"
    echo "The key should have been generated during server setup."
fi
