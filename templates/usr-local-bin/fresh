#!/bin/bash
set -euo pipefail

# Colors
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

echo -e "${CYAN}⚡ SYSTEM PATH™ Quick Rebuild${NC}"
echo "=============================="

cd /var/www/html

if [ ! -f "artisan" ]; then
    echo -e "${RED}❌ Laravel not found in /var/www/html${NC}"
    exit 1
fi

echo -e "${YELLOW}Clearing caches...${NC}"
php artisan config:clear
php artisan cache:clear
php artisan route:clear
php artisan view:clear

echo -e "${YELLOW}Installing dependencies...${NC}"
npm ci || npm install

echo -e "${YELLOW}Building assets...${NC}"
npm run build

echo -e "${YELLOW}Optimizing Composer...${NC}"
composer dump-autoload --optimize

echo -e "${YELLOW}Optimizing Laravel...${NC}"
php artisan config:cache
php artisan route:cache 2>/dev/null || echo "Route caching skipped"
php artisan view:cache
php artisan optimize

echo -e "${YELLOW}Fixing permissions...${NC}"
sudo /usr/local/bin/laravel-fix-perms

echo -e "${GREEN}✅ Quick rebuild complete!${NC}"
