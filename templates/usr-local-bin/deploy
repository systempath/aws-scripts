#!/bin/bash
set -euo pipefail

# Colors
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BOLD='\033[1m'
NC='\033[0m'

echo -e "${CYAN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${CYAN}â•‘          ðŸš€ SYSTEM PATHâ„¢ Deployment Script                   â•‘${NC}"
echo -e "${CYAN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""

cd /var/www/html

if [ ! -f "artisan" ]; then
    echo -e "${RED}âŒ Laravel not found in /var/www/html${NC}"
    exit 1
fi

echo -e "${YELLOW}ðŸ“¦ Clearing all caches...${NC}"
php artisan config:clear
php artisan cache:clear
php artisan route:clear
php artisan view:clear
php artisan event:clear 2>/dev/null || true

echo -e "${YELLOW}ðŸ—„ï¸  Running database migrations...${NC}"
php artisan migrate --force || {
    echo -e "${RED}Migration failed. Check your database connection.${NC}"
    exit 1
}

echo -e "${YELLOW}ðŸ“¦ Installing NPM dependencies...${NC}"
npm ci || npm install || {
    echo -e "${RED}NPM install failed${NC}"
    exit 1
}

echo -e "${YELLOW}ðŸ”¨ Building production assets...${NC}"
npm run build || {
    echo -e "${RED}Build failed${NC}"
    exit 1
}

echo -e "${YELLOW}ðŸš€ Optimizing Composer autoloader...${NC}"
composer dump-autoload --optimize --no-dev

echo -e "${YELLOW}âš¡ Optimizing Laravel...${NC}"
php artisan config:cache
php artisan route:cache 2>/dev/null || echo "Route caching skipped (using closures)"
php artisan view:cache
php artisan event:cache 2>/dev/null || true
php artisan optimize

echo -e "${YELLOW}ðŸ”§ Fixing permissions...${NC}"
sudo /usr/local/bin/laravel-fix-perms

echo ""
echo -e "${GREEN}âœ… Deployment complete!${NC}"
echo -e "${CYAN}Your app is ready at: http://$(curl -s ifconfig.me 2>/dev/null || echo 'your-server-ip')${NC}"
