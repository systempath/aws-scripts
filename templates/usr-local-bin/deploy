#!/bin/bash
set -euo pipefail

# Colors
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BOLD='\033[1m'
NC='\033[0m'

echo -e "${CYAN}╔═══════════════════════════════════════════════════════════════╗${NC}"
echo -e "${CYAN}║          🚀 SYSTEM PATH™ Deployment Script                   ║${NC}"
echo -e "${CYAN}╚═══════════════════════════════════════════════════════════════╝${NC}"
echo ""

cd /var/www/html

if [ ! -f "artisan" ]; then
    echo -e "${RED}❌ Laravel not found in /var/www/html${NC}"
    exit 1
fi

echo -e "${YELLOW}📦 Clearing all caches...${NC}"
php artisan config:clear
php artisan cache:clear
php artisan route:clear
php artisan view:clear
php artisan event:clear 2>/dev/null || true

echo -e "${YELLOW}🗄️  Running database migrations...${NC}"
php artisan migrate --force || {
    echo -e "${RED}Migration failed. Check your database connection.${NC}"
    exit 1
}

echo -e "${YELLOW}📦 Installing NPM dependencies...${NC}"
npm ci || npm install || {
    echo -e "${RED}NPM install failed${NC}"
    exit 1
}

echo -e "${YELLOW}🔨 Building production assets...${NC}"
npm run build || {
    echo -e "${RED}Build failed${NC}"
    exit 1
}

echo -e "${YELLOW}🚀 Optimizing Composer autoloader...${NC}"
composer dump-autoload --optimize --no-dev

echo -e "${YELLOW}⚡ Optimizing Laravel...${NC}"
php artisan config:cache
php artisan route:cache 2>/dev/null || echo "Route caching skipped (using closures)"
php artisan view:cache
php artisan event:cache 2>/dev/null || true
php artisan optimize

echo -e "${YELLOW}🔧 Fixing permissions...${NC}"
sudo /usr/local/bin/laravel-fix-perms

echo ""
echo -e "${GREEN}✅ Deployment complete!${NC}"
echo -e "${CYAN}Your app is ready at: http://$(curl -s ifconfig.me 2>/dev/null || echo 'your-server-ip')${NC}"
